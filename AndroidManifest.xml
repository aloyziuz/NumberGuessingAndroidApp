<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jcu.cp3307.brownscriterionnumberguessing"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="jcu.cp3307.brownscriterionnumberguessing.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="jcu.cp3307.brownscriterionnumberguessing.Game_Activity"
            android:configChanges="orientation"
            android:label="@string/title_activity_game_"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="jcu.cp3307.brownscriterionnumberguessing.ChildGameActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_child_game"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="jcu.cp3307.brownscriterionnumberguessing.FreeGameActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_free_game"
            android:parentActivityName="jcu.cp3307.brownscriterionnumberguessing.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jcu.cp3307.brownscriterionnumberguessing.MainActivity" />
        </activity>
        <activity
            android:name="jcu.cp3307.brownscriterionnumberguessing.HighscoreActivity"
            android:label="@string/title_activity_highscore" >
